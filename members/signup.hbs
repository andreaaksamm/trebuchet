{{!< ../default}}
<main class="c-site-main c-site-main--strecth">
	{{#if @member.paid}}

		{{!-- Logged in, paying member: Redirect home --}}

		<script>window.location = '{{@site.url}}';</script>

	{{else if @member}}

		{{!-- Logged in, not paying: Check out --}}

		<script>window.location = '{{@site.url}}/membership/';</script>

	{{else}}

		{{!-- Not logged in: Sign up --}}

		<div class="c-members-box o-inner-wide">

			<form class="c-auth-form" data-members-form="signup">
				<h1 class="c-auth-form__title">{{t "Subscribe to {blogtitle}" blogtitle=@site.title}}</h1>
				<p class="c-auth-form__sub-title">{{t "Subscribe to {blogtitle} and receive access to exclusive posts and content updates." blogtitle=@site.title}}</p>

				<div class="c-auth-box">
					<input class="c-input" aria-label="Email Address" data-members-email type="email" placeholder="{{t "Your email address"}}" required="true" autocomplete="false" />
					<button class="c-btn c-btn--primary c-auth-box__btn" type="submit">
						<span class="c-btn__content">{{t "Continue"}}</span>
						<span class="c-btn__loader">{{> icons/loader}}</span>
					</button>
				</div>

				<div class="c-message c-message--success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete signin"}}</div>
				<div class="c-message c-message--error">{{t "Please enter a valid email address!"}}</div>

				<p class="c-auth-form__ref">{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign In"}}</a></p>
			</form>

		<div>

	{{/if}}
</main>
